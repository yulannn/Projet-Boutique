<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Boutique</title>
    <link rel="stylesheet" href="/public/css/header.css">
    <link rel="stylesheet" href="/public/css/jersey.css">
    <link rel="stylesheet" href="/public/css/panier.css">
</head>

<body>

<%- include('burger_menu.ejs') %>

<%- include('panier.ejs') %>

<main class="container">
    <%- include('header.ejs') %>

    <div class="jersey__container">
        <div class="product__image"></div>
        <div class="product__display">
            <div class="product__infos"></div>
            <div class="product__sizes">
                <h2>Choisissez votre taille</h2>
                <div class="size__buttons">
                    <a id="1" class="size__button">XS</a>
                    <a id="2" class="size__button">S</a>
                    <a id="3" class="size__button size__button--selected">M</a>
                    <a id="4" class="size__button">L</a>
                    <a id="5" class="size__button">XL</a>
                    <a id="6" class="size__button">2XL</a>
                </div>
            </div>
            <div class="payment__info">
                <div class="test">
                    <div class="product__stock"></div>
                    <div class="product__price">
                        <div class="price__value"></div>
                    </div>
                </div>
                <div class="product__add">
                    <a id="add__button" class="add__button-invalid">Add to cart</a>
                </div>
            </div>
        </div>

    </div>

    <h2 class="reviews__title">Reviews</h2>
    <div class="reviews__container"></div>

</main>

<script src="/public/js/panier.js"></script>
<script src="/public/js/burger.js"></script>
<script src="/public/js/jersey.js"></script>
<script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
</body>

</html>